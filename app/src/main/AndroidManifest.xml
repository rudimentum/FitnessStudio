<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rudimentum.fitnessstudio">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessStudio">
        <activity android:theme="@style/Theme.FitnessStudio.NoActionBar" android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:theme="@style/Theme.FitnessStudio" android:name=".MainActivity" />
        <activity android:theme="@style/Theme.FitnessStudio.NoActionBar" android:name=".RegisterActivity" />
        <activity android:theme="@style/Theme.FitnessStudio.NoActionBar" android:name=".LoginActivity" />
        <activity android:theme="@style/Theme.FitnessStudio" android:name=".AboutActivity" />

    </application>

</manifest>
